<!DOCTYPE html>
<html>
  <head>
    <title>SessionExample</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <div><%= current_user.email %></div>
      <%= link_to 'Logout', logout_path, class: 'logout' %>
    <% else %>
      <div>Sign Up or Login!</div>
      <%= link_to 'Sign Up', new_user_path, class: 'sign_up' %>
      <%= link_to 'Log In', login_path, class: 'log_in' %>
    <% end %>

    <%= yield %>
  </body>
</html>
